<div class="container">
<p class="display-4" style="font-size: 2.5vmax; text-align: center; margin-top: 30px;">Welcome to your personal space, {{userData.firstName}}!</p>
{{{profupdatesuccess}}}
<form method="post" action="/profile/update/?_method=PUT" enctype="multipart/form-data">
    <div class="form-group">
        <label for="fNameUpdate">First Name:</label>
        <input id="fNameUpdate" type="text" class="form-control" name="firstName" placeholder="First Name" value="{{userData.firstName}}">
       
    </div>

    <div class="form-group">
        <label for="lNameUpdate">Last Name:</label>
        <input id="lNameUpdate" type="text" class="form-control" name="lastName" placeholder="Last Name" value="{{userData.lastName}}">
       
    </div>

    <div class="form-group">
        <label for="emailUpdate">Email:</label>
        <input id="emailUpdate" type="text" class="form-control" name="email" placeholder="Email" value="{{userData.email}}">
    </div>

    <div class="form-row">
        <div class="form-group col-md" style="border: none;">
            <label for="phNumUpdate">Phone:</label>
            <input id="phNumUpdate" type="text" class="form-control" name="phoneNumber" placeholder="Phone" value="{{userData.phoneNumber}}">
        </div>
        {{#if isJobSeeker}}
        <div class="form-group col-md-6">
            <label for="resumeUpdate">Resume:</label>
            <input id="resumeUpdate" type="file" class="form-control" name="resume" placeholder="Resume">
        </div>
        {{/if}}
    </div>
    <input id="userID" type="hidden" name="userID" value="{{userData._id}}">
    <input id="resumePresent" type="hidden" name="resumePresent" value="{{userData.resume}}">
    <div class="form-group">
        <button type="submit" class="btn btn-success">Update</button>
    </div>
</form>
{{#if isJobSeeker}}
<p class="display-4" style="font-size: 2.5vmax; text-align: center; margin-top: 30px;">Applied Jobs:</p>
<div class="app-table">
    <table id="jobs-applied" class="table table-bordered table-striped">
      <tr class="thead-dark">
        <th>Job ID</th>
        <th>Actions</th>
      </tr>
      {{#each jobsAppliedData}}
    <tr>
        <td id="jTitle" appid="{{this.appID}}">{{this.jobID}}</td>
        <td style="text-align: center;">{{{../actions}}}</td>
    </tr>
    {{/each}}
    </table>
  {{!-- <div class="row">
    {{#if noMatch}}
      <p class="display-4 col" style="font-size: 2vmax; text-align: center; margin-top: 30px; border: none;">{{this.noMatch}}</p>
    {{/if}}
  </div> --}}
 </div>
 {{else}}
     <p class="display-4" style="font-size: 2.5vmax; text-align: center; margin-top: 30px;">Shortlisted Applicants:</p>
<div class="app-table">
    <table id="shortlisted-applicants" class="table table-bordered table-striped">
      <tr class="thead-dark">
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Resume</th>
        <th>Shortlisted For</th>
      </tr>
      {{#each shortlistedData}}
    <tr>
        <td id="name" value="{{this._id}}" jobID="{{this.jobID}}">{{this.firstName}} {{this.lastName}}</td>
        <td id="email">{{this.email}}</td>
        <td id="phoneNumber">{{this.phoneNumber}}</td>
        <td id="resume"><a target="_blank" href="/{{this.resume}}">View Resume</a></td>
        <td style="text-align: center;">{{{../actions}}}</td>
    </tr>
    {{/each}}
    </table>
  {{!-- <div class="row">
    {{#if noMatch}}
